{
  "name": "yuntai-game",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:icon": "node build-files/build-icon-example",
    "lint:js": "eslint src",
    "lint:css": "stylelint src/**/*.vue --config ./stylelint.config.js --ignore-pattern styles/",
    "lint-fix:js": "eslint src --fix",
    "lint-fix:css": "stylelint src/**/*.vue --fix --config ./stylelint.config.js --ignore-pattern styles/",
    "lint": "yarn lint:js && yarn lint:css",
    "commit": "git add . && node_modules/commitizen/bin/git-cz",
    "commit:custom": "node_modules/commitizen/bin/git-cz",
    "commit:validate": "validate-commit-msg"
  },
  "gitHooks": {
    "pre-commit": "yarn lint && echo 'lint pass'",
    "commit-msg": "yarn commit:validate"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "",
      "autoFix": false
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.vue": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "accounting-js": "^1.1.1",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "crypto-js": "^3.1.9-1",
    "cube-ui": "^1.10.10",
    "dayjs": "^1.6.6",
    "js-base64": "^2.4.8",
    "numeral": "^2.0.6",
    "reset-css": "^4.0.1",
    "vant": "^1.4.4",
    "vconsole": "^3.2.0",
    "vue": "^2.5.16",
    "vue-clipboard2": "^0.2.1",
    "vue-recyclerview": "^0.4.1",
    "vue-router": "^3.0.1",
    "vue-virtual-scroll-list": "^1.3.0",
    "vueg": "^1.3.4",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "weixin-js-sdk": "^1.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-standard": "^3.0.0-beta.15",
    "autoprefixer": "^8.6.2",
    "babel-plugin-import": "^1.7.0",
    "cheerio": "^1.0.0-rc.2",
    "commitizen": "^2.10.1",
    "cssnano": "^3.10.0",
    "cz-conventional-changelog": "^2.1.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.21",
    "node-sass": "^4.9.0",
    "postcss-aspect-ratio-mini": "^0.0.2",
    "postcss-calc": "^6.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-import": "^11.1.0",
    "postcss-jsx": "^0.28.0",
    "postcss-plugin-px2rem": "^0.7.0",
    "postcss-px-to-viewport": "^0.0.3",
    "postcss-theme-variables": "^1.0.0",
    "postcss-url": "^7.3.2",
    "postcss-viewport-units": "^0.1.4",
    "postcss-write-svg": "^3.0.1",
    "precss": "2.0",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "validate-commit-message": "^3.0.1",
    "vue-template-compiler": "^2.5.16"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
